<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:animateLayoutChanges="true"
    android:id="@+id/mapwizeSearchMainLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/mapwizeSearchBarCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mapwizeSearchBarCardViewConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <FrameLayout
                android:id="@+id/mapwizeSearchBarLeftFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/mapwizeSearchBarLeftButton"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:src="@drawable/mapwize_ic_menu_black_24dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="4dp"/>
                <ImageView
                    android:id="@+id/mapwizeSearchBarBackButton"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:src="@drawable/mapwize_ic_arrow_back_black_24dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="4dp"
                    android:visibility="gone"/>
            </FrameLayout>

            <EditText
                android:id="@+id/mapwizeSearchBarEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/mapwize_search_venue"
                android:backgroundTint="#FFF"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="8dp"
                app:layout_constraintStart_toEndOf="@+id/mapwizeSearchBarLeftFrame"
                app:layout_constraintEnd_toStartOf="@+id/mapwizeSearchBarRightFrame"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <FrameLayout
                android:id="@+id/mapwizeSearchBarRightFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/mapwizeSearchBarRightButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/mapwize_details_ic_baseline_directions_24"
                    android:padding="12dp"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/mapwizeSearchBarProgressBar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:progressTint="@color/mapwize_main_color"
                    android:indeterminateTint="@color/mapwize_main_color"
                    android:visibility="gone"/>
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>