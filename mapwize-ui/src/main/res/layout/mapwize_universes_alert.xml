<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mapwizeUniversesImageViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_apps_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mapwizeUniversesTextViewHeader"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/mapwizeUniversesTextViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/choose_universe"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/mapwizeUniversesImageViewHeader"
        app:layout_constraintTop_toTopOf="@+id/mapwizeUniversesImageViewHeader"
        app:layout_constraintBottom_toBottomOf="@+id/mapwizeUniversesImageViewHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mapwizeUniversesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/mapwizeUniversesImageViewHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="LinearLayoutManager"
        android:background="#FFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>