<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mapwize_details_just_ripple_button"
    android:minHeight="40dp"
    android:orientation="vertical"
    android:paddingHorizontal="2dp"
    android:paddingVertical="4dp">

    <RelativeLayout
        android:id="@+id/iconCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginBottom="4dp"
        android:background="@drawable/mapwize_details_circle_view_voided"
        android:padding="8dp">

        <ImageView
            android:id="@+id/bigButtonIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/mapwize_details_ic_baseline_directions_24"
            app:tint="@color/mapwize_main_color" />
    </RelativeLayout>

    <TextView
        android:id="@+id/bigButtonLabel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="2dp"
        android:text="Call"
        android:textAllCaps="true"
        android:textColor="@color/mapwize_main_color"
        android:textSize="14sp" />
</LinearLayout>