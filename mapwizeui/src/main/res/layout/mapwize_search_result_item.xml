<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF">

    <ImageView
        android:id="@+id/suggestions_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFF"
        app:srcCompat="@drawable/ic_location_on_black_24dp"
        android:tint="#AAA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="12dp"
        />

    <TextView
        android:id="@+id/suggestions_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:singleLine="true"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/suggestions_item_floor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/suggestions_item_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/suggestions_item_floor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#999"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/suggestions_item_icon"
        app:layout_constraintTop_toBottomOf="@+id/suggestions_item_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEE"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>